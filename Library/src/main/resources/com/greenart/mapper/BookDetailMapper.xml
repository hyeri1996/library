<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatix.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.greenart.mapper.BookDetailMapper">
    <select id="selectBookDetail" resultType="com.greenart.vo.BookDetailVO">
        select * from book_detail
        limit 20
    </select>
    <select id="selectBookDetailByTitle" resultType="com.greenart.vo.BookDetailVO">
        select * from book_detail where title like #{title}
        limit 20 offset #{offset};
    </select>
</mapper>